<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/episode_item"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="160dp"
    android:backgroundTint="@color/ad_box"
    app:cardCornerRadius="18dp"
    app:cardElevation="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Episode_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@color/ad_box"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Episode_image"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="2dp"
                    android:gravity="start"
                    android:text="Title"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/baloo2_bold"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/Description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:gravity="start"
                    android:text="0000"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:fontFamily="@font/baloo2_medium"
                    android:textStyle="normal"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6">
                <ImageView
                    android:id="@+id/Download_btn_image"
                    android:layout_width="32dp"
                    android:layout_height="25dp"
                    android:tint="@color/white"
                    android:src="@drawable/downloads"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Premium_Tag"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="-5dp"
            android:background="@drawable/edittext_bg"
            android:backgroundTint="@color/yellow"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Episode_image">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/black"
                android:src="@drawable/star" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>